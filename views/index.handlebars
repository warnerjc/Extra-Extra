{{!-- HEADER --}}
<header>
    <div class='container-fluid' id='header-img'>

    </div>
</header>
{{!-- HEADER END --}}

{{!-- ARTICLES --}}
<main>
    <div class='container'>
        {{#each dbArticles}}
            <div class='row mb-3 article'>
                <div class='card w-100'>
                    <div class='card-body'>
                        <h5 class='card-title'>{{this.title}}</h5>
                        <p class='card-text'>{{this.body}}</p>
                        <p class='card-text'>Date: {{this.articleDate}}</p>
                        <a href={{this.link}} class='btn btn-primary'>Visit Source</a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class='row'>
                <div class='card w-100'>
                    <div class='card-body'>
                        <h5 class='card-title'>We couldn't find any Articles in the DB.</h5>
                        <p class='card-text'>Scrape for new Articles.</p>
                        <a href='/scrape' class='btn btn-primary scrape'>Scrape</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>

</main>
{{!-- ARTICLES END --}} 

